# Database (Neon Postgres)
DATABASE_URL="postgresql://username:password@host.neon.tech/database?sslmode=require"
DATABASE_URL_UNPOOLED="postgresql://username:password@host.neon.tech/database?sslmode=require"

# Auth.js (NextAuth) v5 secret for JWT signing/encryption
AUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Base URL for Auth.js callbacks
NEXTAUTH_URL="http://localhost:3000"

# Fallback for legacy NextAuth v4 compatibility
NEXTAUTH_SECRET="${AUTH_SECRET}"

# Email (Optional - for announcements feature)
# Only needed if using the announcements/notifications features
# RESEND_API_KEY="re_your_api_key_here"

# Vercel Analytics & Speed Insights
# These are automatically enabled when deployed to Vercel
# No additional configuration required - components are integrated in app/layout.tsx
# VERCEL_ANALYTICS_ID="auto-detected-from-vercel-deployment"
# VERCEL_SPEED_INSIGHTS_ID="auto-detected-from-vercel-deployment"

# Production Environment
NODE_ENV="production"
APP_ENV="production"

# Monitoring & Performance
RATE_LIMIT_ENABLED="true"

# Mobile API Configuration
MOBILE_JWT_SECRET="your-mobile-jwt-secret-here-generate-with-openssl-rand-base64-32"
MOBILE_CORS_ORIGINS="https://www.drouple.app,https://api.drouple.app,https://mobile.drouple.app"
RATE_LIMIT_MOBILE="60"