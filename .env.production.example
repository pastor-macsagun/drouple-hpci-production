# Production Environment Variables
# Copy this file to .env.production and fill in the values

# Database (Neon Postgres with pooling)
DATABASE_URL="postgresql://user:password@host.neon.tech/dbname?sslmode=require&pgbouncer=true"
DATABASE_URL_UNPOOLED="postgresql://user:password@host.neon.tech/dbname?sslmode=require"

# NextAuth Configuration
NEXTAUTH_URL="https://drouple.app"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Email Service (Resend)
RESEND_API_KEY="re_xxxxxxxxxxxx"
RESEND_FROM_EMAIL="noreply@drouple.app"

# Performance and Security
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="60000"

# Application Environment
APP_ENV="production"
NODE_ENV="production"

# Vercel Configuration (set by Vercel automatically)
# VERCEL_URL - provided by Vercel
# VERCEL_GIT_COMMIT_SHA - provided by Vercel