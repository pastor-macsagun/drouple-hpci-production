# Staging Environment Configuration
# Copy to .env for staging deployment

# Database
DATABASE_URL="postgresql://user:password@host:5432/hpci_staging?sslmode=require&pgbouncer=true"
DATABASE_URL_UNPOOLED="postgresql://user:password@host:5432/hpci_staging?sslmode=require"

# NextAuth
NEXTAUTH_URL="https://staging.drouple.app"
NEXTAUTH_SECRET="your-staging-secret-here"

# Email
RESEND_API_KEY="re_staging_key"
EMAIL_FROM="hello@drouple.app"

# Monitoring
SENTRY_DSN="https://staging@sentry.io/project"
SENTRY_ORG="hpci"
SENTRY_PROJECT="chms-staging"

# Feature Flags
ENABLE_RATE_LIMITING="true"
ENABLE_MONITORING="true"
ENABLE_CACHING="true"

# Environment
NODE_ENV="staging"
VERCEL_ENV="preview"