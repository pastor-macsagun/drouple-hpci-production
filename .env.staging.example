# Staging Environment Variables
# Copy this file to .env.staging and fill in the values

# Database (Neon Postgres with pooling - staging branch)
DATABASE_URL="postgresql://user:password@staging-host.neon.tech/dbname?sslmode=require&pgbouncer=true"
DATABASE_URL_UNPOOLED="postgresql://user:password@staging-host.neon.tech/dbname?sslmode=require"

# NextAuth Configuration
NEXTAUTH_URL="https://staging.drouple.app"
NEXTAUTH_SECRET="generate-different-secret-for-staging"

# Email Service (Resend - staging project)
RESEND_API_KEY="re_staging_xxxxxxxxxxxx"
RESEND_FROM_EMAIL="staging@drouple.app"

# Monitoring and Error Tracking (Sentry - staging environment)
SENTRY_DSN="https://xxxxx@sentry.io/staging-xxxxx"
NEXT_PUBLIC_SENTRY_DSN="https://xxxxx@sentry.io/staging-xxxxx"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="hpci-chms-staging"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# Performance and Security (more relaxed for staging)
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_MAX_REQUESTS="200"
RATE_LIMIT_WINDOW_MS="60000"

# Application Environment
APP_ENV="staging"
NODE_ENV="production"  # Use production build optimizations

# Vercel Configuration (set by Vercel automatically)
# VERCEL_URL - provided by Vercel
# VERCEL_GIT_COMMIT_SHA - provided by Vercel