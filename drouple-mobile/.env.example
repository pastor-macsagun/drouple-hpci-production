# Environment Configuration Example
# Copy this file to .env and configure with your actual values

# App Configuration
APP_VARIANT=development
NODE_ENV=development

# API Configuration (REQUIRED - Must be HTTPS)
EXPO_PUBLIC_API_URL=https://api.drouple.com
EXPO_PUBLIC_API_URL_DEV=https://api-dev.drouple.com
EXPO_PUBLIC_API_URL_STAGING=https://api-staging.drouple.com
EXPO_PUBLIC_API_URL_PROD=https://api.drouple.com
EXPO_PUBLIC_WS_URL=wss://api.drouple.com
EXPO_PUBLIC_API_TIMEOUT=30000
EXPO_PUBLIC_API_RETRIES=3

# Security Configuration (REQUIRED)
EXPO_PUBLIC_APP_SECRET=your-secure-app-secret-32-chars-minimum
EXPO_PUBLIC_HTTPS_ONLY=true

# Feature Flags
EXPO_PUBLIC_ENABLE_MOCK_APIS=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true
EXPO_PUBLIC_ENABLE_BIOMETRICS=true
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=true
EXPO_PUBLIC_PERFORMANCE_MONITORING=false
EXPO_PUBLIC_BUNDLE_ANALYSIS=false

# Rate Limiting
EXPO_PUBLIC_RATE_LIMIT_MAX=100
EXPO_PUBLIC_RATE_LIMIT_WINDOW=15

# Security Configuration
EXPO_PUBLIC_CERTIFICATE_PINNING=false
EXPO_PUBLIC_ENCRYPT_STORAGE=true
EXPO_PUBLIC_BIOMETRIC_TIMEOUT=30

# Build Configuration
EXPO_PUBLIC_BUILD_NUMBER=1
EXPO_PUBLIC_VERSION_CODE=1
IOS_BUILD_NUMBER=1
ANDROID_VERSION_CODE=1

# Expo Configuration
EXPO_PROJECT_ID=your-expo-project-id
EXPO_PUBLIC_EAS_PROJECT_ID=your-eas-project-id
EXPO_OWNER=drouple

# Third-party Services
EXPO_PUBLIC_SENTRY_DSN=
SENTRY_ORG=drouple
SENTRY_PROJECT=drouple-mobile
SENTRY_AUTH_TOKEN=

# Analytics
AMPLITUDE_API_KEY=
MIXPANEL_TOKEN=
FIREBASE_API_KEY=

# Notifications
ONE_SIGNAL_APP_ID=
FIREBASE_MESSAGING_SENDER_ID=

# Apple Configuration
EXPO_APPLE_ID=your-apple-id@example.com
EXPO_APPLE_ID_PASSWORD=
APPLE_TEAM_ID=ABCD123456
ASC_APP_ID=1234567890

# Android Configuration
ANDROID_KEYSTORE_PATH=./release-keystore.keystore
ANDROID_KEYSTORE_PASSWORD=
ANDROID_KEY_ALIAS=drouple-mobile
ANDROID_KEY_PASSWORD=
GOOGLE_SERVICES_JSON=./google-services.json

# CI/CD Configuration
GITHUB_TOKEN=
SLACK_WEBHOOK_URL=
CODECOV_TOKEN=
SNYK_TOKEN=
LHCI_GITHUB_APP_TOKEN=

# Database (for testing)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/drouple_test

# Mock API Server
MOCK_API_PORT=3001
MOCK_API_HOST=localhost

# Development Tools
FLIPPER_ENABLED=false
REACT_DEBUGGER_ENABLED=true
PERFORMANCE_PROFILING=false

# Logging
LOG_LEVEL=info
ENABLE_REMOTE_LOGGING=false

# Cache Configuration
CACHE_SIZE_LIMIT=50000000
CACHE_TTL_DEFAULT=300000
OFFLINE_STORAGE_LIMIT=100000000

# Accessibility
ACCESSIBILITY_TESTING=false
ACCESSIBILITY_FONT_SCALE=1.0

# Localization
DEFAULT_LOCALE=en-US
SUPPORTED_LOCALES=en-US,es-ES,fr-FR

# Deep Linking
DEEP_LINK_SCHEME=drouple
UNIVERSAL_LINK_DOMAIN=drouple.com

# OAuth / Authentication
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
JWT_SECRET=your-jwt-secret-key

# Feature Toggles
FEATURE_DARK_MODE=true
FEATURE_BIOMETRIC_AUTH=true
FEATURE_OFFLINE_MODE=true
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_LOCATION_SERVICES=true
FEATURE_CAMERA_INTEGRATION=true
FEATURE_QR_CODE_SCANNING=true
FEATURE_SOCIAL_SHARING=true
FEATURE_IN_APP_PURCHASES=false
FEATURE_VOICE_NOTES=false

# Performance Thresholds
PERFORMANCE_BUNDLE_SIZE_LIMIT=10000000
PERFORMANCE_MEMORY_LIMIT=200000000
PERFORMANCE_RENDER_TIME_LIMIT=16.67

# Quality Assurance
QA_TESTING_MODE=false
QA_MOCK_SLOW_NETWORK=false
QA_MOCK_OFFLINE_MODE=false
QA_ENABLE_DEBUG_OVERLAY=false

# Legal & Compliance
PRIVACY_POLICY_URL=https://drouple.com/privacy
TERMS_OF_SERVICE_URL=https://drouple.com/terms
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true

# Support & Help
SUPPORT_EMAIL=support@drouple.com
HELP_CENTER_URL=https://help.drouple.com
FEEDBACK_URL=https://feedback.drouple.com

# Version Management
MINIMUM_SUPPORTED_VERSION=1.0.0
FORCE_UPDATE_VERSION=
SOFT_UPDATE_VERSION=

# Content Delivery
CDN_BASE_URL=https://cdn.drouple.com
ASSETS_BASE_URL=https://assets.drouple.com
MEDIA_BASE_URL=https://media.drouple.com