{
  "name": "drouple-mobile",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "dev": "expo start --dev-client",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:unit": "jest --testPathPattern=src/.*\\.(test|spec)\\.(ts|tsx)$",
    "test:integration": "jest --testPathPattern=__tests__/.*integration.*\\.(test|spec)\\.(ts|tsx)$",
    "test:e2e": "detox test",
    "test:e2e:build": "detox build",
    "test:e2e:ios": "detox test --configuration ios.sim.debug",
    "test:e2e:ios:device": "detox test --configuration ios.device.debug",
    "test:e2e:ios:ipad": "detox test --configuration ios.ipad.debug",
    "test:e2e:android": "detox test --configuration android.debug",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:a11y": "jest --testPathPattern=accessibility",
    "test:performance": "jest --testPathPattern=performance",
    "test:security": "jest --testPathPattern=security",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "build": "expo build",
    "build:android": "expo build:android",
    "build:ios": "expo build:ios",
    "build:development": "eas build --profile development",
    "build:preview": "eas build --profile preview",
    "build:production": "eas build --profile production",
    "prebuild": "expo prebuild",
    "clean": "expo r -c",
    "reset": "expo r -c && npm install",
    "sync:flush": "expo start --dev-client && npx expo run:android --variant debug",
    "sentry:upload": "npx @sentry/wizard -i reactNative",
    "db:migrate": "expo run:android --variant debug -- --reset-cache"
  },
  "dependencies": {
    "@drouple/contracts": "file:../packages/contracts",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-native/eslint-config": "^0.81.1",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/native": "^7.1.6",
    "@react-navigation/native-stack": "^7.3.10",
    "@shopify/flash-list": "1.7.6",
    "@tanstack/react-query": "^5.85.9",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "expo": "~53.0.22",
    "expo-camera": "^16.1.11",
    "expo-constants": "^17.1.7",
    "expo-crypto": "~14.1.5",
    "expo-dev-client": "~5.2.4",
    "expo-device": "^7.1.4",
    "expo-image-picker": "^16.1.4",
    "expo-linear-gradient": "~14.1.5",
    "expo-linking": "~7.1.7",
    "expo-local-authentication": "^16.0.5",
    "expo-localization": "^16.1.6",
    "expo-location": "^18.1.6",
    "expo-network": "^7.1.5",
    "expo-notifications": "^0.31.4",
    "expo-router": "~5.1.5",
    "expo-secure-store": "~14.2.4",
    "expo-sqlite": "^15.2.14",
    "expo-status-bar": "~2.2.3",
    "jwt-decode": "^4.0.0",
    "react": "19.0.0",
    "react-hook-form": "^7.62.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-paper": "^5.14.5",
    "react-native-qrcode-svg": "^6.3.2",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-svg": "15.11.2",
    "react-native-vector-icons": "^10.2.0",
    "socket.io-client": "^4.8.0",
    "zod": "^4.1.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@react-native-community/cli": "^20.0.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^30.0.0",
    "@types/react": "~19.0.0",
    "@types/react-test-renderer": "~19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "detox": "^20.29.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-native": "^5.0.0",
    "jest": "~29.7.0",
    "jest-expo": "~53.0.10",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "msw": "^2.11.1",
    "prettier": "^3.6.2",
    "react-test-renderer": "^19.0.0",
    "ts-jest": "^29.4.1",
    "typescript": "~5.8.3"
  },
  "private": true
}
